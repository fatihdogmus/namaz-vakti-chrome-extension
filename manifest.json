{
  "manifest_version": 3,
  "name": "Namaz Vakti",
  "short_name": "Namaz",
  "version": "0.1.0",
  "description": "Quickly view upcoming prayer times from the browser toolbar.",
  "host_permissions": [
    "https://ezanvakti.imsakiyem.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Namaz Vakti",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms"
  ]
}
